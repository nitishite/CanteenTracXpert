<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Block4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:src="@drawable/icon" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="#fff"
            android:ems="10"
            android:textSize="18dp"
            android:text="Block 4" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="170dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/block4_ich"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded_corner"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#fff"
                android:text="Indian Coffee House(ICH)"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/block4_bhk"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_corner"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="Brunch House Kitchen"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/block4_bf"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_corner"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#fff"
                android:text="Bhagwati Foods"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_button"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="New Food"
                android:textStyle="bold" />

        </LinearLayout>

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:paddingHorizontal="30dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="#0DECB6"
            android:text="Explore"/>
    </LinearLayout>
</RelativeLayout>